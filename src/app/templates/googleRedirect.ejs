<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Google Login</title>
    <style>
      body {
        background: linear-gradient(135deg, #4285f4 0%, #34a853 100%);
        min-height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Segoe UI", Arial, sans-serif;
      }
      .container {
        background: #fff;
        padding: 2.5rem 2rem;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(60, 60, 60, 0.15);
        text-align: center;
        min-width: 320px;
      }
      .google-logo {
        width: 48px;
        margin-bottom: 1rem;
      }
      .redirect-text {
        font-size: 1.2rem;
        color: #333;
        margin-bottom: 1.5rem;
      }
      .spinner {
        border: 4px solid #f3f3f3;
        border-top: 4px solid #4285f4;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem auto;
      }
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
      .error-message {
        color: #d93025;
        font-weight: 500;
        margin-top: 1rem;
      }
    </style>
  </head>
  <body>
    <div class="container" id="main-content">
      <img
        class="google-logo"
        src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg"
        alt="Google Logo"
      />
      <div class="spinner"></div>
      <div class="redirect-text">Redirecting to Google for secure login...</div>
    </div>
  </body>
  <script>
    (async () => {
      try {
        const response = await fetch(
          "<%= betterAuthUrl %>/api/auth/sign-in/social",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            credentials: "include",
            body: JSON.stringify({
              provider: "google",
              callbackURL: "<%= callbackURL %>",
            }),
          },
        );

        const data = await response.json();

        if (data.url) {
          window.location.href = data.url;
        } else {
          document.getElementById("main-content").innerHTML = `
            <img class="google-logo" src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google Logo" />
            <div class="error-message">
              Error occurred while redirecting to Google.<br>Please try again later.
            </div>
          `;
        }
      } catch (error) {
        document.getElementById("main-content").innerHTML = `
          <img class="google-logo" src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google Logo" />
          <div class="error-message">
            Error occurred while redirecting to Google.<br>
            Please try again later.<br>
            <small>${error.message}</small>
          </div>
        `;
      }
    })();
  </script>
</html>
